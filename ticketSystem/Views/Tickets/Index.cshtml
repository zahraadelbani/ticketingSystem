@model IEnumerable<ticketSystem.Models.Ticket>

@{
    ViewData["Title"] = "Tickets";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="bi bi-ticket-detailed me-2"></i>Tickets
        </h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Create New Ticket
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Title)</th>
                            <th>@Html.DisplayNameFor(model => model.Description)</th>
                            <th>@Html.DisplayNameFor(model => model.Status)</th>
                            <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                            <th>@Html.DisplayNameFor(model => model.CreatedBy)</th>
                            <th>Project</th>
                            <th>Category</th>
                            <th>Priority</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                <td>
                                    <div class="text-truncate" style="max-width: 200px;">
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </div>
                                </td>
                                <td>
                                    <span class="badge rounded-pill @(item.Status switch {
                                        "Open" => "bg-success",
                                        "In Progress" => "bg-warning",
                                        "Closed" => "bg-secondary",
                                        _ => "bg-primary"
                                    })">
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </span>
                                </td>
                                <td>@item.CreatedAt.ToString("MMM dd, yyyy")</td>
                                <td>@Html.DisplayFor(modelItem => item.CreatedBy)</td>
                                <td>
                                    <span class="badge bg-info">@item.Project?.Name</span>
                                </td>
                                <td>
                                    <span class="badge bg-primary">@item.Category?.Name</span>
                                </td>
                                <td>
                                    <span class="badge rounded-pill @(item.Priority?.Name switch {
                                        "High" => "bg-danger",
                                        "Medium" => "bg-warning",
                                        "Low" => "bg-success",
                                        _ => "bg-secondary"
                                    })">
                                        @item.Priority?.Name
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .table th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }

    .table td {
        font-size: 0.9rem;
    }

    .badge {
        font-weight: 500;
        padding: 0.5em 0.8em;
    }

    .btn-group .btn {
        padding: 0.25rem 0.5rem;
    }

    .btn-group .btn:hover {
        transform: translateY(-1px);
    }

    .table-hover tbody tr:hover {
        background-color: rgba(108, 92, 231, 0.05);
    }
</style>
