@model ticketSystem.Models.Ticket

@{
    ViewData["Title"] = "Delete Ticket";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="bi bi-trash me-2"></i>Delete Ticket
        </h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="alert alert-warning mb-4">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <strong>Warning!</strong> Are you sure you want to delete this ticket? This action cannot be undone.
            </div>

            <div class="row">
                <div class="col-md-8">
                    <div class="mb-4">
                        <h5 class="card-title">@Model.Title</h5>
                        <p class="text-muted mb-0">@Model.Description</p>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-flag me-2 text-primary"></i>
                                <div>
                                    <small class="text-muted d-block">Status</small>
                                    <span class="badge rounded-pill @(Model.Status switch {
                                        "Open" => "bg-success",
                                        "In Progress" => "bg-warning",
                                        "Closed" => "bg-secondary",
                                        _ => "bg-primary"
                                    })">
                                        @Model.Status
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-calendar me-2 text-primary"></i>
                                <div>
                                    <small class="text-muted d-block">Created At</small>
                                    <span>@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-person me-2 text-primary"></i>
                                <div>
                                    <small class="text-muted d-block">Created By</small>
                                    <span>@Model.CreatedBy</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-folder me-2 text-primary"></i>
                                <div>
                                    <small class="text-muted d-block">Project</small>
                                    <span class="badge bg-info">@Model.Project?.Name</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-tags me-2 text-primary"></i>
                                <div>
                                    <small class="text-muted d-block">Category</small>
                                    <span class="badge bg-primary">@Model.Category?.Name</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-flag-fill me-2 text-primary"></i>
                                <div>
                                    <small class="text-muted d-block">Priority</small>
                                    <span class="badge rounded-pill @(Model.Priority?.Name switch {
                                        "High" => "bg-danger",
                                        "Medium" => "bg-warning",
                                        "Low" => "bg-success",
                                        _ => "bg-secondary"
                                    })">
                                        @Model.Priority?.Name
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-2"></i>Delete Ticket
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .alert {
        border: none;
        border-radius: 10px;
    }

    .badge {
        font-weight: 500;
        padding: 0.5em 0.8em;
    }

    .btn {
        padding: 0.5rem 1.5rem;
        font-weight: 500;
    }

    .text-muted {
        color: #6c757d !important;
    }

    .card {
        border: none;
        border-radius: 15px;
    }
</style>
