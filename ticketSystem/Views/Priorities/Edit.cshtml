@model ticketSystem.Models.Priority

@{
    ViewData["Title"] = "Edit Priority";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="bi bi-pencil me-2"></i>Edit Priority
        </h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Priority Name</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-tag"></i></span>
                        <input asp-for="Name" class="form-control" placeholder="Enter priority name" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Level" class="form-label">Level (e.g., 1-10)</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-sort-numeric-up"></i></span>
                        <input asp-for="Level" class="form-control" type="number" placeholder="Enter priority level" />
                    </div>
                    <span asp-validation-for="Level" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-2"></i>Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .form-label {
        font-weight: 500;
        color: #2d3436;
    }

    .input-group-text {
        background-color: #f8f9fa;
        border-right: none;
    }

    .form-control, .form-select {
        border-left: none;
    }

    .form-control:focus, .form-select:focus {
        border-color: #ced4da;
        box-shadow: none;
    }

    .input-group:focus-within {
        box-shadow: 0 0 0 0.2rem rgba(108, 92, 231, 0.25);
    }

    .btn-primary {
        padding: 0.5rem 1.5rem;
    }

    .alert {
        border: none;
        border-radius: 10px;
    }

    .card {
        border: none;
        border-radius: 15px;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
