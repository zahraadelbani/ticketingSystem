@model IEnumerable<ticketSystem.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="bi bi-tags me-2"></i>Categories
        </h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Create New Category
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in Model)
                        {
                            <tr>
                                <td>@c.Name</td>
                                <td>@c.CreatedAt.ToString("MMM dd, yyyy HH:mm")</td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-warning"><i class="bi bi-pencil"></i></a>
                                        <a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-danger"><i class="bi bi-trash"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .table thead th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
        color: #5a5c69;
    }

    .table tbody td {
        font-size: 0.9rem;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(108, 92, 231, 0.05);
    }

    .btn-group .btn {
        padding: 0.25rem 0.5rem;
    }

    .btn-group .btn:hover {
        transform: translateY(-1px);
    }

    .card-header {
        background-color: #f8f9fc;
        border-bottom: 1px solid #e3e6f0;
        color: var(--primary-color);
    }

    .card {
        border: none;
        border-radius: 15px;
    }
</style>
