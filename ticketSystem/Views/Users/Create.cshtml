@{
    ViewData["Title"] = "Create User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="bi bi-person-plus me-2"></i>Create New User
        </h1>
        <a class="btn btn-outline-secondary" href="@Url.Action("Index", "Users")">
            <i class="bi bi-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                        <input name="email" class="form-control" required placeholder="Enter user's email" />
                    </div>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                        <input name="password" type="password" class="form-control" required placeholder="Enter password" />
                    </div>
                </div>

                <div class="mb-3">
                    <label for="role" class="form-label">Select Role</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person-check"></i></span>
                        <select name="role" class="form-select" required>
                            <option value="">-- Choose Role --</option>
                            @foreach (var role in ViewBag.Roles as List<string>)
                            {
                                <option value="@role">@role</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>Create User
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .form-label {
        font-weight: 500;
        color: #2d3436;
    }

    .input-group-text {
        background-color: #f8f9fa;
        border-right: none;
    }

    .form-control, .form-select {
        border-left: none;
    }

    .form-control:focus, .form-select:focus {
        border-color: #ced4da;
        box-shadow: none;
    }

    .input-group:focus-within {
        box-shadow: 0 0 0 0.2rem rgba(108, 92, 231, 0.25);
    }

    .btn-primary {
        padding: 0.5rem 1.5rem;
    }

    .alert {
        border: none;
        border-radius: 10px;
    }

    .card {
        border: none;
        border-radius: 15px;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
