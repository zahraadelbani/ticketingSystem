@model ticketSystem.Models.Project

@{
    ViewData["Title"] = "Create Project";
}

<div class="container mt-4">
    <div class="card shadow-sm mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h2 class="card-title mb-0"><i class="bi bi-folder-plus me-2"></i>@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-card-heading"></i></span>
                        <input asp-for="Name" class="form-control" placeholder="Enter project name" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-text-left"></i></span>
                        <textarea asp-for="Description" class="form-control" placeholder="Enter project description" rows="3"></textarea>
                    </div>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary me-md-2"><i class="bi bi-arrow-left-circle me-2"></i>Back to List</a>
                    <button type="submit" class="btn btn-primary"><i class="bi bi-save me-2"></i>Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .card-header {
        background-color: #f8f9fc; /* Light background for the header */
        border-bottom: 1px solid #e3e6f0;
        color: var(--primary-color); /* Use the primary color for the text */
        font-weight: 600;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
